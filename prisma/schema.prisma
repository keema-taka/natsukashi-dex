// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Render 本番は現在 SQLite を使用（DATABASE_URL = file:/tmp/sqlite.db 等）
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Entry {
  id          String   @id @default(cuid())
  title       String
  episode     String
  age         Int?
  tags        String   @default("")          // CSV
  imageUrl    String
  contributor Json                           // { id, name, avatarUrl }
  likes       Int      @default(0)           // 集計カウンタ
  createdAt   DateTime @default(now())

  // リレーション
  comments    Comment[]
  likesRel    Like[]                         // いいね実体（誰が押したか）
}

model Comment {
  id        String   @id @default(cuid())
  entryId   String
  body      String
  author    Json
  createdAt DateTime @default(now())

  entry     Entry    @relation(fields: [entryId], references: [id])

  @@index([entryId, createdAt])
}

model Like {
  id         String   @id @default(cuid())
  entryId    String
  userId     String
  userName   String
  userAvatar String?
  createdAt  DateTime @default(now())

  entry      Entry    @relation(fields: [entryId], references: [id])

  @@unique([entryId, userId])            // 同一ユーザーの重複いいね防止
  @@index([entryId, createdAt])
}
