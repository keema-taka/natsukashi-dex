// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Entry {
  id          String   @id @default(cuid())
  title       String
  episode     String
  age         Int?
  tags        String   @default("")          // CSV
  imageUrl    String
  contributor Json                           // { id, name, avatarUrl }
  likes       Int      @default(0)           // 集計カウンタ
  createdAt   DateTime @default(now())

  // リレーション
  comments    Comment[]
  likesRel    Like[]

  @@index([createdAt])
  @@index([likes])
}

model Comment {
  id        String   @id @default(cuid())
  entryId   String
  body      String
  author    Json
  createdAt DateTime @default(now())

  // エントリ削除時にコメントも削除
  entry     Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@index([entryId, createdAt])
}

model Like {
  id         String   @id @default(cuid())
  entryId    String
  userId     String
  userName   String
  userAvatar String?
  createdAt  DateTime @default(now())

  // エントリ削除時にLikeも削除
  entry      Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@unique([entryId, userId])            // 同一ユーザーの重複いいね防止
  @@index([entryId, createdAt])
}
